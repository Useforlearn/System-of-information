e }}</div>\r\n          </div>\r\n          <div>\r\n            <div v-for=\"item in tableData\" :key=\"item.id\" class=\"card\" style=\"display: flex; margin-bottom: 10px\">\r\n              <img :src=\"item.cover\" alt=\"\" style=\"width: 80px; height: 80px; border-radius: 5px\">\r\n              <div style=\"padding-left: 20px\">\r\n                <div style=\"margin-bottom: 30px; font-size: 18px\" class=\"line1\">{{ item.title }}</div>\r\n                <div style=\"font-size: 13px; color: #666\">\r\n                  <el-tag>{{ item.category }}</el-tag>\r\n                  <span style=\"margin: 0 20px\">{{ item.time }}</span>\r\n                  <span>阅读 {{ item.count }}</span>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n          <div style=\"margin: 10px 0\" v-if=\"total > 0\">\r\n            <el-pagination\r\n                background\r\n                @current-change=\"handleCurrentChange\"\r\n                :current-page=\"pageNum\"\r\n                :page-size=\"pageSize\"\r\n                layout=\"total, prev, pager, next\"\r\n                :total=\"total\">\r\n            </el-pagination>\r\n          </div>\r\n        </div>\r\n\r\n        <!--        右边区域-->\r\n        <div style=\"width: 260px\">\r\n          <div style=\"margin-bottom: 10px; display: flex; align-items: center\">\r\n            <div style=\"flex: 1; font-size: 24px; \">公益活动</div>\r\n            <a href=\"/front/activity\">更多>></a>\r\n          </div>\r\n          <div class=\"card\">\r\n            <div @click=\"$router.push('/front/activityDetail?id=' + item.id)\" style=\"display: flex; grid-gap: 10px; margin-bottom: 15px; cursor: pointer\" v-for=\"item in activityList\" :key=\"item.id\">\r\n              <img :src=\"item.cover\" alt=\"\" style=\"width: 60px; height: 60px; border-radius: 5px\">\r\n              <div style=\"flex: 1\">\r\n                <div style=\"height: 40px; margin-bottom: 5px\" class=\"line2\">{{ 